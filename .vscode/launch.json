{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Flask",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": true,
            "module": "flask",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
                "env": {
        "FLASK_APP": "run.py",
        "FLASK_DEBUG": "1"
    },
    "args": [
        "run",
        "--no-debugger",
        "--no-reload"
    ],
    "jinja": true,
        }
    ]
}
